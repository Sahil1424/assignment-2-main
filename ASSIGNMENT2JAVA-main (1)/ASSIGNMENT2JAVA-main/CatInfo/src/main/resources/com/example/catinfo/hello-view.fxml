<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="10" alignment="CENTER" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.catinfo.CatInfoController">
    <HBox alignment="CENTER" spacing="10">
        <Label text="Select a Cat Breed:"/>
        <ComboBox fx:id="catBreedsComboBox" onAction="#fetchCatBreedInfo"/>
    </HBox>

    <HBox alignment="CENTER" spacing="10">
        <ImageView fx:id="imageView" fitHeight="200" fitWidth="200"/>
        <VBox spacing="5">
            <Label text="Name:"/>
            <Label fx:id="nameLabel"/>
            <Label text="Description:"/>
            <TextArea fx:id="descriptionTextArea" wrapText="true" prefRowCount="5" prefColumnCount="20"/>
        </VBox>
    </HBox>

</VBox>
